<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@mipmap/bg_favorite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:text="视频名称"
                android:textColor="#88ffffff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/battary_stuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_battery_60" />

            <TextView
                android:id="@+id/system_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="8dp"
                android:text="12:00"
                android:textColor="#88ffffff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@mipmap/bg_favorite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/vioce_close"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/controller_voice_btn_selector" />

            <SeekBar
                android:id="@+id/voice_seekbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/other_paly"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/chianandroid_about_secelet" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@mipmap/bg_favorite"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="5dp"
                android:text="00:00"
                android:textColor="#88ffffff"
                android:textSize="18sp"
                />
            <SeekBar
                android:layout_weight="1"
                android:id="@+id/video_seekbar"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/video_all_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:paddingLeft="5dp"
                android:text="20:00"
                android:textColor="#88ffffff"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@mipmap/bg_favorite"
            android:orientation="horizontal">

            <Button
                android:id="@+id/video_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/video_exit_selector" />

            <Button
                android:id="@+id/video_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/video_pre_selector" />

            <Button
                android:id="@+id/video_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/video_pasue_selsector" />

            <Button
                android:id="@+id/play_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/video_btn_forward_selector" />

            <Button
                android:id="@+id/screen_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/screen_type_original_selector" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>